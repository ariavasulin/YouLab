# YouLab Server Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# YOULAB HTTP SERVICE
# =============================================================================

YOULAB_SERVICE_HOST=0.0.0.0
YOULAB_SERVICE_PORT=8100

# =============================================================================
# LETTA CONNECTION
# =============================================================================

# URL of the Letta server
LETTA_BASE_URL=http://localhost:8283

# Letta API key (if your server requires authentication)
# LETTA_API_KEY=

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# Provider: openai, anthropic, local
LLM_PROVIDER=openai

# Default model to use
LLM_MODEL=gpt-4

# OpenAI API key (required if using OpenAI)
OPENAI_API_KEY=

# Anthropic API key (required if using Anthropic/Claude)
# ANTHROPIC_API_KEY=

# =============================================================================
# OBSERVABILITY
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Output logs as JSON (true for production, false for development)
LOG_JSON=false

# Service name for logs and traces
SERVICE_NAME=youlab

# =============================================================================
# LANGFUSE (Optional LLM Tracing)
# =============================================================================

# Enable Langfuse integration
LANGFUSE_ENABLED=false

# Langfuse credentials (required if enabled)
# Get these from: https://cloud.langfuse.com or your self-hosted instance
# LANGFUSE_PUBLIC_KEY=
# LANGFUSE_SECRET_KEY=

# Langfuse host (default: cloud, or your self-hosted URL)
LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# MEMORY SETTINGS
# =============================================================================

# Maximum characters per core memory block
CORE_MEMORY_MAX_CHARS=1500

# Rotate to archival when memory exceeds this threshold (0.0 - 1.0)
ARCHIVAL_ROTATION_THRESHOLD=0.8

# =============================================================================
# AGENT DEFAULTS
# =============================================================================

# Default agent name
DEFAULT_AGENT_NAME=default

# =============================================================================
# HONCHO (Message Persistence)
# =============================================================================

# Enable Honcho message persistence
YOULAB_SERVICE_HONCHO_ENABLED=true

# Honcho workspace identifier
YOULAB_SERVICE_HONCHO_WORKSPACE_ID=youlab

# Honcho API key (required for production, not needed for demo)
# YOULAB_SERVICE_HONCHO_API_KEY=

# Honcho environment: demo, local, or production
YOULAB_SERVICE_HONCHO_ENVIRONMENT=demo

# =============================================================================
# FILE SYNC (OpenWebUI → Letta)
# =============================================================================

# Enable file sync between OpenWebUI and Letta
YOULAB_SERVICE_FILE_SYNC_ENABLED=true

# OpenWebUI base URL for file sync
YOULAB_SERVICE_OPENWEBUI_URL=http://localhost:3000

# OpenWebUI API key (get from OpenWebUI Settings → Account → API Keys)
# YOULAB_SERVICE_OPENWEBUI_API_KEY=

# Sync interval in seconds
YOULAB_SERVICE_FILE_SYNC_INTERVAL=30

# Embedding model for file indexing
YOULAB_SERVICE_FILE_SYNC_EMBEDDING_MODEL=openai/text-embedding-3-small

# Data directory for sync state
YOULAB_SERVICE_DATA_DIR=.data
